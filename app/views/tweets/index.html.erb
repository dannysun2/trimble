<div class="col-md-6 col-md-offset-3">
<% if @tweets.present? %>
  <div class="ui-303">
    <div class="o-timeline">
      <% @tweets.each do |tweet| %>
        <div class="timeline-item">
          <div class="timeline-content">
            <p><%= tweet.message %></p>
            <% unless tweet.hashtags.empty? %>
              <small>
                <% tweet.hashtags.each do |hashtag| %>
                  <i>#<%= hashtag %></i>
                <% end %>
              </small>
            <% end %>
          </div>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <hr>
<% end %>


<div class="ui-15">
    <div class="ui-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12 ui-padd">
            <div class="ui-form">

                <%= form_tag get_tweets_path, :method => 'get', class: 'form-inline' do %>
                <div class="form-group">
                  <%= text_field_tag :latitude, params[:latitude], placeholder: 'Enter Latitude', class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :longitude, params[:longitude], placeholder: 'Enter Longitude', class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :radius, params[:radius], placeholder: 'Enter Radius', class: 'form-control' %>
                </div>
                <%= submit_tag "Search", class: "btn btn-red" %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<%= paginate @tweets %>
</div>
